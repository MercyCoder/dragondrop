<h1>Make a new note card</h1>

<%= form_with scope: :card, url: '/users/:user_id/card', local: true do | form | %>
<div>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
</div>
<div>
    <%= form.label :text %>
    <br>
    <%= form.text_area :text %>
</div>
<div>
    <%= form.label :category %>
    <br>
    <%= form.text_field :category %>
</div>
<div>
    <%= form.label :urgency %>
    <br>
    <%= select_tag(:urgency, options_for_select([['Mild Fire', 1], ['Medium Fire', 2], ['Hot Fire', 3], ['Diablo', 4]], 1)) %>
</div>
<div>
    <%= form.submit %>
</div>
<%end%>